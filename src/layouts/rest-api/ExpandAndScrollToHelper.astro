<script>
  import { expandAndScrollTo } from "~/state/rest-api/expand-section";

  document.querySelectorAll("a[data-expand-and-scroll-to]").forEach((el) => {
    const paramsJSON = el.getAttribute("data-expand-and-scroll-to");
    if (!paramsJSON) return;
    const params = JSON.parse(paramsJSON);
    el.addEventListener("click", (e) => {
      e.preventDefault();
      expandAndScrollTo(params);
    });
  });
</script>

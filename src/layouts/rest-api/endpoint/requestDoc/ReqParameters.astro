---
import type { OpenApiSchema, Parameter } from "../../schema-utils";
import ReqRes from "./ReqRes.astro";
import ReqPropertiesDoc from "./ReqPropertiesDoc.astro";

interface Props {
  basepath: string;
  title?: string | undefined;
  description?: string | undefined;
  parameters: Parameter[];
  schema?: OpenApiSchema;
  showNested?: boolean | undefined;
}

const { basepath, title, description, parameters, schema, showNested } =
  Astro.props;
---

<ReqRes title={title} description={description}>
  <ReqPropertiesDoc
    basepath={basepath}
    properties={parameters}
    schema={schema}
    showNested={showNested}
  />
</ReqRes>
